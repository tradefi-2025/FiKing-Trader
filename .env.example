# Environment Configuration for FiKing-Trader
# Copy this file to .env and fill in your actual credentials

# ==================== MongoDB Configuration ====================
# MongoDB connection string
# Local: mongodb://localhost:27017/
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017/

# Database name
MONGODB_DATABASE=fiking_trader

# ==================== PostgreSQL Configuration ====================
# PostgreSQL connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=fiking_trader
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# ==================== Refinitiv API Configuration ====================
# Required: Your Refinitiv API Key / Client ID
REFINITIV_API_KEY=your_api_key_here

# Optional: Username and Password (for Resource Owner Password Credentials flow)
REFINITIV_USERNAME=your_username
REFINITIV_PASSWORD=your_password

# Optional: Custom API base URL (defaults to https://api.refinitiv.com)
REFINITIV_BASE_URL=https://api.refinitiv.com

